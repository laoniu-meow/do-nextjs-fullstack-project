# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Remote Database Connection (for external access)
REMOTE_DATABASE_URL="postgresql://username:password@0.0.0.0:5432/database_name"

# Docker PostgreSQL Configuration
# db_$(openssl rand -hex 3)
POSTGRES_CONTAINER_NAME="image _name"
POSTGRES_DB="database_name"
POSTGRES_USER="postgres"
# openssl rand -base64 12 | cut -c1-12
POSTGRES_PASSWORD="password"
POSTGRES_PORT="5432"
POSTGRES_HOST_AUTH_METHOD="trust"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Email (Nodemailer)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"

# JWT (openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-here"

# File Upload
MAX_FILE_SIZE=5242880 # 5MB
UPLOAD_LOGOS_DIR="public"
UPLOAD_MEDIA_DIR="public"
UPLOAD_DOCS_DIR="public"

# Email Encryption_key 
# openssl rand -hex 32
EMAIL_ENCRYPTION_KEY=

# CORS Settings
CORS_ORIGIN="*"
CORS_CREDENTIALS="true"
